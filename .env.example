# App
APP_ENV=development
APP_SECRET=change_me
DOMAIN=
ACME_EMAIL=

# DB
POSTGRES_USER=tg_admin
POSTGRES_PASSWORD=tg_password
POSTGRES_DB=tg_manager
DATABASE_URL=postgresql+psycopg://tg_admin:tg_password@db:5432/tg_manager

# Redis/Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REDIS_URL=
METRICS_ENABLED=true
# In production metrics are hidden unless METRICS_TOKEN is set and provided in request header `X-Metrics-Token`.
# METRICS_TOKEN=change_me_long_random

# Default: enabled in non-production, disabled in production unless explicitly set.
# DOCS_ENABLED=true

# Publish retries
PUBLISH_RETRY_MAX=3
PUBLISH_RETRY_DELAY_SECONDS=300

# Auth
ACCESS_TOKEN_EXPIRE_MINUTES=60
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_FEATURE_VIEWS=false
TELEGRAM_WEBHOOK_SECRET=
TELEGRAM_TIMEOUT_SECONDS=10
TELEGRAM_RETRIES=2

# n8n
N8N_API_KEY=

# AI
OPENAI_API_KEY=
AI_PROVIDER=openai

# Media
MEDIA_DIR=/app/media
MEDIA_MAX_BYTES=5242880
MEDIA_MAX_PIXELS=30000000
